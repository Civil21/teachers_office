<h1 class="text-center"><%=@day.strftime("%e %B, %Y")%></h1>
<%8.times do |i|%>
  <%i +=1%>
  <% lesson = @lessons.where(number: i).first %>
  <% if lesson%>
    <%= link_to "lesson #{i} |"%>
  <% else %>
    <%= "lesson #{i} |"%>
  <%end%>
<%end%>
<% @lessons.each do |lesson| %>
  <% group = lesson.group%>
  <div class="" id="lesson_<%=lesson.number%>">
    <div class="">
      <div>
        <b>group</b>: <%= lesson.group.name%>
      </div>
      <div>
        <b>subject</b>: <%= lesson.subject.name%>
      </div>

      <%=render "form", lesson: lesson%>
      <button class="btn btn-info" type="button" name="button">Добавити завдання</button>
    </div>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>GPA</th>
            <th>In present</th>
            <th>Test</th>
            <th>Classwork</th>
            <th>Comment</th>
          </tr>
        </thead>
        <tbody>
          <% group.students.each_with_index do |student, index|%>
            <%= render "student", student: student, index:index %>
          <%end%>
        </tbody>
        <tr>
        </tr>
      </table>
    </div>
  </div>
  <%= render "homeworks/form", homework: (lesson.homework || lesson.build_homework) %>
<%end%>
