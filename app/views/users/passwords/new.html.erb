<div class="Login_page d-flex flex-column justify-content-center align-items-center">
  <div class="Box Box__small Box__radius Box__opacity mb-4">
    <h1 class="h3 text-center mb-0">Забули пароль?</h1>
  </div>

  <div class="Box Box__small Box__radius Box__opacity"></div>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="form-floating mb-3">
        <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email", placeholder: "name@example.com" %>
        <%= f.label :email, "Електронна адреса" %>
      </div>

      <div class="actions">
        <%= f.submit "Відправити інструкції" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>